// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Project {
  id                String   @id @default(cuid())
  slug              String   @unique
  title             String   @unique
  shortDescription  String
  content           String?
  tags              String   // <-- UBAH INI
  trailerUrl        String?
  screenshots       String   // <-- UBAH INI
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
}

model Member {
  id          String   @id @default(cuid())
  slug        String   @unique
  name        String
  role        String
  pictureUrl  String?
  content     String?
  screenshots String   // <-- UBAH INI
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// ... (model Achievement dan TeamInfo tidak perlu diubah) ...
model Achievement {
  id          String   @id @default(cuid())
  slug        String   @unique
  title       String
  description String
  logoUrl     String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model TeamInfo {
  id      String  @id @default("ladahitam_info")
  name    String
  bio     String
  email   String
  socials Json
  logoUrl String?
}